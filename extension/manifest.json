{
  "manifest_version": 3,
  "name": "DoubleClickJack Protector",
  "version": "1.0",
  "description": "Simple double-clickjacking protection",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-32x32.png",
      "48": "icons/favicon-32x32.png",
      "128": "icons/favicon.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}